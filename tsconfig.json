{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "ts",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@types/emscripten", "@webgpu/types"]
  },
  "include": ["ts/**/*.ts", "ts/**/*.js"]
}
